<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/itemString" android:layout_margin="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/itemNumber" android:layout_margin="16dp"/>
    <View
            android:layout_width="match_parent"
            android:id="@+id/view" android:background="@color/design_default_color_primary"
            android:layout_height="3dp"/>
</LinearLayout>